argument_specs:
  main:
    short_description: Install and configure postgres
    version_added: "0.1.0"
    options:
      kc_db_name:
        required: true
      kc_db_user:
        required: true
      kc_db_pass:
        required: true
      kc_local_cert_file:
        required: true
      kc_local_key_file:
        required: true
      kc_db_origin:
        default: 127.0.0.1
